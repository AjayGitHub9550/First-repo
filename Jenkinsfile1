pipeline {
      agent any
      
      stages{
            stage("GIT checkout"){
            steps{
                 git 'https://github.com/AjayGitHub9550/First-repo.git'
              }
            }
            sshagent(credentials: ['Ajaylast']){
                  steps{
                       sh "mvn clean package"
                       sh "mv target/*.war target/FirstProject.war"
                      }
                       
            }
             stage("depoly"){
                  steps{
                     
                       
                       sshagent(['TOMCAT']) {
                       
                       sh """
                            scp -o StrictHostKeyChecking=no  target/FirstProject.war ubuntu@3.84.151.238:/home/ubuntu/apache-tomcat-9.0.87/webapps/
                            
                            ssh ubuntu@3.84.151.238 /home/ubuntu/apache-tomcat-9.0.87/bin/shutdown.sh
                            ssh ubuntu@3.84.151.238 /home/ubuntu/apache-tomcat-9.0.87/bin/startup.sh
                            
                          """
    
}
                      
                       }
            }
       }
  }     
